<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_float_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bingo_selector_layout_floatintgview_pannel"
    android:clickable="true"
    android:focusable="true"
    android:padding="4dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_float_account"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/bingo_ic_account"
        app:layout_constraintBottom_toTopOf="@+id/tv_panel_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_panel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_bingo_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_float_account"
        tools:text="账号" />

</androidx.constraintlayout.widget.ConstraintLayout>