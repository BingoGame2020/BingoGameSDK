<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BingoTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="BingoTheme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>


    </style>

    <style name="BingoTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="BingoTheme.NoActionBar.Dialog" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BingoCheckBoxStyle" parent="Theme.AppCompat.Light">
        <!--未选中颜色-->
        <item name="colorControlNormal">@color/color_bingo_gray_text</item>
        <!--选中时颜色-->
        <item name="colorControlActivated">@color/color_bingo_btn_red</item>
    </style>

    <style name="popupwindow_anim_left_style">
        <item name="android:windowEnterAnimation">@anim/bingo_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/bingo_popup_exit</item>
    </style>

    <style name="popupwindow_anim_right_style">
        <item name="android:windowEnterAnimation">@anim/bingo_popup_enter_right</item>
        <item name="android:windowExitAnimation">@anim/bingo_popup_exit_right</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="navigationIcon">@drawable/bingo_ic_arrow_back_white</item>
    </style>

    <style name="BingoTheme_Dialog_Transparent" parent="Theme.AppCompat.Light.Dialog">
        <!--        显示dialog 背景不变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_top_enter_anim">
        <item name="android:windowEnterAnimation">@anim/bingo_dialog_enter_top</item>
        <item name="android:windowExitAnimation">@anim/bingo_dialog_exit_top</item>
    </style>

</resources>
